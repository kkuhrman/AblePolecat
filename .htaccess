#
# Able Distributors Project Polecat .htaccess
# DO NOT EDIT THIS FILE. COPY IT INTO YOUR LOCAL ./polecat/htdocs FOLDER
# AND MAKE YOUR CHANGES THERE.
#

#
# Don't show directory listings for URLs which map to a directory.
#
Options -Indexes
# Options +FollowSymLinks

#
# Set the default handler.
#
DirectoryIndex index.php index.html index.htm

# ErrorDocument 404 index.php

<IfModule mod_rewrite.c>
  RewriteEngine On
  
  #
  # Block access to "hidden" directories whose names begin with a period.
  # (This rule exists mainly to prevent access to Git files).
  #
  RewriteRule "(^|/)\." - [F]
  
  #
  # The polecat website is in the physical directory ./htdocs on GitHub.
  # If pulling the entire project into a directory on the web server,
  # e.g. /var/www/sites/polecat, the document root of the site will be 
  # /var/www/sites/polecat/. If using an alias to access the site
  # e.g. http://localhost/polecat, define the base below relative to the
  # server document root. e.g. RewriteBase /polecat
  #
  # RewriteBase /polecat
  # RewriteBase /
  
  #
  # Pass all requests not referring directly to files in the file system to
  # index.php.
  #
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} !=/.(js|ico|gif|jpg|png|css|html|swf|mp3|wav|txt)$
  RewriteRule ^ index.php [L]

</IfModule>
